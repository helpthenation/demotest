<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_company_form_location" model="ir.ui.view">
            <field name="name">res.company.form.location</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Location">
                        <group>
                            <field name="location_ids">
                                <tree editable="bottom">
                                    <field name="location_name"/>
                                    <field name="location_code"/>
                                    <field name="location_city_id"/>
                                    <field name="emirate_name_id"/>
                                    <field name="location_country_id"/>
                                    <field name="location_address"/>
                                    <field name="location_phone"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>