<odoo>
    <data>
        <record model="ir.ui.view" id="travel_request_cost_center_line_form_view">
            <field name="name">travel.cost.center.line.form</field>
            <field name="model">travel.cost.center.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cost_center_id"
                                       options="{'no_create': True, 'no_edit': True,'no_open': True}"/>
                                <field name="share_percentage"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>