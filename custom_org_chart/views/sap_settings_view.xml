<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sap</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="SAP" data-key="sap" string="SAP">
                        <div id="sap_set">
                            <h2>SAP Integration</h2>
                            <div class="row mt16 o_settings_container" id="sap">
                                <div class="col-12 col-lg-6 o_setting_box" id="sap_view">
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">SAP Folder Path</span>
                                        <div class="content-group">
                                            <div class="text-muted mb8">
                                                This path specifies the output folder of the SAP integration
                                            </div>
                                            <label for="sap_folder_path" string="Path: "/>
                                            <field name="sap_folder_path" placeholder="/Odoo/odoo13/"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box" id="sap_view_2">
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">SAP LOG Folder Path</span>
                                        <div class="content-group">
                                            <div class="text-muted mb8">
                                                This path specifies the output log folder of the SAP integration
                                            </div>
                                            <label for="sap_log_folder_path" string="Path: "/>
                                            <field name="sap_log_folder_path" placeholder="/Odoo/odoo13/log/"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>